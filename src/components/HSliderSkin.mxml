<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.HSlider")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	<fx:Script>
		<![CDATA[
			[Bindable]
			public var picWidth:Number;
		 	private function showPos():void
			{
			//	highlightTrack.width=thumb.x;
		//		highlightTrack.invalidateDisplayList();
			}
		]]>
	</fx:Script>
	<!-- SkinParts
	name=dataTip, type=mx.core.IFactory, required=false
	name=track, type=spark.components.Button, required=false
	name=thumb, type=spark.components.Button, required=false
	-->
	<s:Button id="track" left="0" right="30" top="9" bottom="0" skinClass="components.MyHSliderTrackSkin" />
	 
	<s:Rect x="1" topLeftRadiusX="7" topLeftRadiusY="7" top="9" height="15" width="{thumb.x+3}" bottomLeftRadiusX="7" bottomLeftRadiusY="7">
		<s:stroke>
			<s:SolidColorStroke color="0x0056b7" weight="0.1" alpha="1"/>
		</s:stroke>
		<s:fill>
			<s:LinearGradient   rotation="90">
				<s:entries>
					<s:GradientEntry color="0x0056b7" ratio="0.00" alpha="1"/>
					<s:GradientEntry color="0x00dff9" ratio="0.25" alpha="1"/>
					<s:GradientEntry color="0x009bce" ratio="0.45" alpha="1"/>
				</s:entries>
			</s:LinearGradient>
			 
				
			 
		</s:fill>
	</s:Rect>
	 
	<s:Button id="thumb" x="-5"    top="0" bottom="0" width="35" height="35" skinClass="components.MySliderThumbSkin"   mouseMove="showPos()" />
</s:Skin>
